<%- include('../partials/header.ejs') %>

<div class="row center">
	<div class="row">
		<div class="col s2 card-panel green lighten-3 z-depth-1 offset-s1" >
			<div class="row">
				<% if(user.profilePic === ' ') {%>
					<i class="large material-icons">account_circle</i>
				<% } else {%>
				<img src="../<%= user.profilePic.slice(7) %>" class="responsive-img"/>
				<% } %>
				<div class="row">
					<% if(!(user.firstName === ' ') && !(user.lastName === ' ')) {%>
					<%= user.firstName %> <%= user.lastName %>
					<% } %>
				</div>
			</div>
			<div class="row">
				<p>
					<%= user.bio %>
				</p>
				<% if(currentUser.userName === user.userName) {%>
				<a class="btn-small waves-effect waves-light" href="/users/<%=user.userName%>/edit">Edit<i class="material-icons right">account_box</i></a>
				<% } %>
			</div>
		</div>

		<div class="col s8">

			<div class="container">
				<h2><%= user.userName %></h2>
				<div class="row"></div>
					<div class="row green lighten-3">
					<div class="section">
						<div class="row valign-wrapper">
						<h3 class="left">&nbsp; &nbsp; Posts &nbsp; <i class="small material-icons ">photo_library</i></h3>
							<div class="input-field col s3 right">
								<select id="sort" name="sort" class="browser-default">
									<option value="new">Newest</option>
									<option value="liked">Oldest</option>
								</select>
							</div>
						</div>
					</div>
					<div class="row"></div>
						<% for(let i = (posts.length -1); i >= 0; i--) { %>
							<a class="black-text" href="../posts/<%= posts[i].id %>">
								<div class="col s3 hoverable">

									<img class="responsive-img z-depth-3" src="../<%=posts[i].image.slice(7)%>">
									<p class="center"><%=posts[i].title%></p>
								</div>
							</a>
						<% } %>
					</div>

			</div>
		</div>
	</div>

</div>

<%- include('../partials/footer.ejs') %>
