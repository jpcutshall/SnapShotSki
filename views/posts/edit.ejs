<%- include('../partials/header.ejs') %>

<div class="container" >
	<h2 class="center">Edit Post</h2>
	<form class="col center" action="/posts/<%=post.id%>?_method=PUT" method="POST">

		<div class="row">
			<div class="input-field">
				<input type="text" id="title" name="title" class="validate" value="<%=post.title%>" required>
				<label for="title">Title</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field">
				<input type="text" id="description" name="description" class="validate" value="<%=post.description%>">
				<label for="description">Description</label>
			</div>
		</div>
		<div class="row">
			LOCATION WITH GOOGS
		</div>
		<div class="row">
			<div class="input-field">
				<button class="btn waves-effect waves-light" type="submit" name="action">Post</button>
			</div>
		</div>
	</form>
	<div class="row">
		<form class="col center" action="/posts/<%=post.id%>?_method=DELETE" method="POST">
			<button class="btn waves-effect waves-light" type="submit" name="action">Delete</button>
		</form>
	</div>
</div>

<%- include('../partials/footer.ejs') %>
